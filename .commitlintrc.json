{
  "extends": [
    "@commitlint/config-conventional"
  ],
  "rules": {
    "type-enum": [
      2,
      "always",
      [
        "feat",
        "fix",
        "docs",
        "style",
        "refactor",
        "perf",
        "test",
        "build",
        "ci",
        "chore",
        "revert",
        "security"
      ]
    ],
    "subject-full-stop": [
      2,
      "never",
      "."
    ],
    "subject-case": [
      2,
      "always",
      "sentence-case"
    ],
    "body-max-line-length": [
      2,
      "always",
      72
    ],
    "subject-max-length": [
      2,
      "always",
      50
    ],
    "body-leading-blank": [
      2,
      "always"
    ],
    "footer-leading-blank": [
      2,
      "always"
    ],
    "footer-max-line-length": [
      2,
      "always",
      72
    ],
    "header-max-length": [
      2,
      "always",
      72
    ],
    "scope-empty": [
      1,
      "never"
    ],
    "scope-case": [
      2,
      "always",
      "lower-case"
    ],
    "subject-empty": [
      2,
      "never"
    ],
    "subject-exclamation-mark": [
      2,
      "never"
    ],
    "type-case": [
      2,
      "always",
      "lower-case"
    ],
    "type-empty": [
      2,
      "never"
    ]
  }
}